{
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "always",
    "htmlWhitespaceSensitivity": "css",
    "overrides": [
        {
            "files": [".prettierrc", "*.json", "tsconfig.json"],
            "options": {
                "parser": "json"
            }
        },
        {
            "files": "*.ftl",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": ["*.ts, *.tsx", "*.js", "*.jsx"],
            "options": {
                "printWidth": 100,
                "tabWidth": 4
            }
        },
        {
            "files": "*.md",
            "options": {
                "printWidth": 80
            }
        }
    ]
}
